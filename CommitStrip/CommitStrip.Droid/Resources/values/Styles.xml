<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!-- Set AppCompat’s color theming attrs -->
    <item name="android:colorPrimary">@color/cs_blue</item>
    <item name="android:colorPrimaryDark">@color/dark_cs_blue</item>
    <item name="android:colorControlNormal">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
  </style>

  <style name="AppActionBar" parent="android:ActionBar.Solid">
    <item name="android:titleTextStyle">@style/AppTitleTextStyle</item>
  </style>

  <style name="AppTitleTextStyle" parent="android:Widget.ActionBar.Title">
    <item name="android:textColor">CHANGE_COLOR_HERE</item>
  </style>
  
  <style name="AppTheme.Splash" parent="android:Theme.NoTitleBar.Fullscreen">
    <item name="android:background">@color/cs_blue</item>
  </style>
</resources>
